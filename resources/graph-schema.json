{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "flowModel",
  "title": "Схема для валидации данных о графе",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "enterState": {
      "type": "string"
    },
    "terminator": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "properties": {
      "type": "object",
      "additionalProperties": true,
      "required": []
    },
    "states": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/state"
      }
    }
  },
  "required": [
    "apiVersion",
    "enterState",
    "terminator",
    "description",
    "properties",
    "states"
  ],
  "definitions": {
    "state": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "decision",
            "process",
            "external"
          ]
        },
        "description": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "additionalProperties": true
        },
        "connectors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "to": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "to"
            ]
          }
        }
      },
      "required": [
        "type",
        "description",
        "properties",
        "connectors"
      ]
    }
  }
}